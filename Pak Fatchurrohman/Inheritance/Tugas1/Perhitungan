public class Perhitungan extends Hitung{

    @Override
    public int penjumlahan(int a, int b) {
        return a + b;
    }

    @Override
    public int pengurangan(int a, int b) {
        return a - b;
    }

    @Override
    public int perkalian(int a, int b) {
        return a * b;
    }

    @Override
    public double pembagian(int a, int b) {
        return (double) a / b;
    }
    
    public static void main(String[] args) {
        Perhitungan obj = new Perhitungan();
        
        int a = 4, b=2;
        System.out.println(String.format("Penjumlahan %d + %d = %d",a,b,obj.penjumlahan(a, b)));
        System.out.println(String.format("Pengurangan %d - %d = %d",a,b,obj.pengurangan(a, b)));
        System.out.println(String.format("Perkalian %d * %d = %d",a,b,obj.perkalian(a, b)));
        System.out.println(String.format("Pembagian %d / %d = %.2f",a,b,obj.pembagian(a, b)));
        
    }
    
}
